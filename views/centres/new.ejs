<% layout('layouts/boilerplate') -%>
<div class="row">
  <h1 class="text-center">New Centre</h1>
  <div class="col-6 offset-3">
    <form action="/centres" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input class="form-control" type="text" id="name" name="centre[name]" />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="centre[description]"
        ></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="centre[location]"
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="centre[image]"
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-success">Add Centre</button>
      </div>
    </form>
    <a href="/centres">All Centres</a>
  </div>
</div>


