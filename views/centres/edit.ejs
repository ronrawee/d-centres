<% layout('layouts/boilerplate') -%>

<div class="row">
  <h1 class="text-center">Edit Centre</h1>
  <div class="col-6 offset-3">
    <form action="/centres/<%= centre._id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label class="form-label" for="name">Name</label>
        <input
          class="form-control"
          type="text"
          id="name"
          name="centre[name]"
          value="<%= centre.name %> "
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea
          class="form-control"
          type="text"
          id="description"
          name="centre[description]"
        >
<%= centre.description %></textarea
        >
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input
          class="form-control"
          type="text"
          id="location"
          name="centre[location]"
          value="<%= centre.location %> "
        />
      </div>
      <div class="mb-3">
        <label class="form-label" for="image">Image Url</label>
        <input
          class="form-control"
          type="text"
          id="image"
          name="centre[image]"
          value="<%= centre.image %> "
        />
      </div>
      <div class="mb-3">
        <button class="btn btn-warning">Edit Centre</button>
      </div>
    </form>
    <a href="/centres/<%= centre._id %> ">Back To Centre</a>
  </div>
</div>
